<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - Venture Real Estate</title>
    <link href="~/Content/bootstrap.min.css" rel="stylesheet" />
    <link href="~/styles.css" rel="stylesheet" />
    <link href="~/Content/owl.carousel.min.css" rel="stylesheet" />
    <link href="~/Content/owl.theme.default.min.css" rel="stylesheet" />
    <script src="~/Scripts/jquery-3.5.1.min.js"></script>
    <script src="~/Scripts/bootstrap.min.js" defer></script>
    <script src="~/Scripts/owl.carousel.min.js" defer></script>
    <script src="~/script.js"></script>
</head>
<body>
    @*Navigation*@
    <nav class="navitop">
        <div class="container">
            <a href="/"><img src="~/images/VentureRealEstate.png" style="max-width: 50px; width: 100%; height: auto;" /></a>
            <div class="menuBtn">
                <a href="javascript:void(0)">Menu</a>
                <div class="submenu">
                    @Html.ActionLink("Home", "Index", "Home")
                    @Html.ActionLink("Listings", "Index", "Listing")
                    <a href="javascript:void(0)">Contact Us</a>
                    @if (Convert.ToInt32(Session["role"]) == 5)
                    {
                        @Html.ActionLink("Management", "Index", "ListingManage")
                    }
                    @if (Session["role"] == null)
                    {
                        @Html.ActionLink("Log in", "Index", "Login")
                    }
                    else
                    {
                        @Html.ActionLink("Log out", "Logout", "Login")
                    }
                </div>
            </div>
            <div class="regularMenu">
                @Html.ActionLink("Home", "Index", "Home")
                @Html.ActionLink("Listings", "Index", "Listing")
                <a href="javascript:void(0)">Contact Us</a>
                @if (Convert.ToInt32(Session["role"]) == 5)
                {
                    @Html.ActionLink("Management", "Index", "ListingManage")
                }
                @if (Session["role"] == null)
                {
                    @Html.ActionLink("Log in", "Index", "Login")
                }
                else
                {
                    @Html.ActionLink("Log out", "Logout", "Login")
                }
            </div>
            @*<a href="javascript:void(0)" class="createListing">Save New Customer</a>*@
        </div>
    </nav>
    @*Navigation Ends*@
    @RenderBody()
    <section id="footer">
        <style>
            .footerLinks {
                color: rgba(255, 255, 255, 0.3);
                transition: color 0.2s;
            }

                .footerLinks:hover {
                    color: rgba(255, 255, 255, 0.7);
                }
        </style>
        <footer id="footer" style="background-color: #2D2D2D;">
            <div class="container">
                <div class="row justify-content-between" style="padding: 50px 0 50px 0;">
                    <div class="col-md-3">
                        <h4 class="text-white mb-4">Quick links</h4>
                        <ul class="list-unstyled">
                            <li><a class="footerLinks" href="/">Home</a></li>
                            <li><a class="footerLinks" href="javascript:void(0)">Contact</a></li>
                        </ul>
                    </div>
                    <div class="col-md-6">
                        <h4 class="text-white mb-4">About Us</h4>
                        <p style="color: rgba(255, 255, 255, 0.3);">Lorem ipsum dolor sit amet, consectetur adipiscing elit. Phasellus in porta ex, at laoreet enim. Vivamus eu congue magna. Nulla facilisi. Interdum et malesuada fames ac ante ipsum primis in faucibus.</p>
                    </div>
                    <div class="col-md-3 text-center">
                        <h5 class="text-white mb-4">Connect With Us</h5>
                        <a class="footerLinks" href="javascript:void(0)" target="_blank"><i class="fab fa-linkedin fa-2x px-2"></i></a>
                        <a class="footerLinks" href="javascript:void(0)" target="_blank"><i class="fab fa-facebook fa-2x px-2"></i></a>
                        <a class="footerLinks" href="javascript:void(0)" target="_blank"><i class="fab fa-github fa-2x px-2"></i></a>
                    </div>
                </div>
                <div style="border-top: 1px solid rgba(255,255,255,0.3); padding: 50px;">
                    <p class="text-center" style="color: rgba(255,255,255,0.3);">Copyright &copy;2020 All rights reserved | Venture Real Estate</p>
                </div>
            </div>
        </footer>
    </section>
    <script src="https://kit.fontawesome.com/bf5dc9b95c.js" crossorigin="anonymous"></script>
</body>
</html>
